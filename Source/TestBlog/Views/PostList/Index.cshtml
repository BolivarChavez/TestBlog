@model IEnumerable<PostList>
@{
    ViewData["Title"] = "Post List";
}

<h1>Post List</h1>

<table>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>
                    <b style="color:brown; font-size:large">@Html.DisplayFor(modelItem => b.post_title)</b>
                    <br />
                    @Html.DisplayFor(modelItem => b.user_fullname)
                </td>
            </tr>
            <tr>
                <td>
                    Posted date : @Html.DisplayFor(modelItem => b.post_update_date)
                </td>
            </tr>
            <tr>
                <td>
                    <a href="@Url.Action("Index", "Post", new { postid = b.post_id })">Read complete post</a>
                    <br />
                    <br />
                </td>
            </tr>
        }
    </tbody>
</table>